<UserControl x:Class="ProjectOpenAppWPF.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectOpenAppWPF.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    
    <PasswordBox x:Name="textPassword"
                             FontSize="15"
                             FontWeight="Medium"
                             FontFamily="Comic Sans MS"
                             Foreground="#FFFAF0"
                             CaretBrush="White"
                             BorderBrush="LemonChiffon"
                             BorderThickness="0,0,0,1"
                             VerticalContentAlignment="Center"
                             Padding="35,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/ProjectOpenAppWPF;component/Images/password.ico"
                                        Stretch="None"
                                        AlignmentX="Left"
                                        />
        </PasswordBox.Background>

    </PasswordBox>
</UserControl>
